.theme-selector-block
  width 98vmin

.theme-selection-block
  display flex
  margin-bottom 15px
  overflow auto
  scroll-behavior: smooth

.theme-block
  min-width 10vmin
  min-height 10vmin
  border-radius 1vmin
  overflow hidden
  margin-right 1vmin
  display flex
  flex-direction column
  transition .3s
  filter brightness(50%)
  &:hover, &.active
    filter brightness(100%)

.theme-block__color
  width 100%
  height auto
  flex 1 1 auto

.just-block
  width 100%
  height 100%