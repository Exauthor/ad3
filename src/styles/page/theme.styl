.theme-page-block
  width 20vmin
  height 20vmin
  border-radius 2vmin
  overflow hidden
  position relative
  margin-right 5px

.theme-page-block__title
  text-align center
  width 100%
  padding 5px
  color var(--color-active)
  left 0
  bottom 0
  position absolute

.bg-anti-element
  z-index 1

.bg-anti-element::before
  content ''
  width 100%
  height 100%
  display block
  z-index -1
  opacity .8
  top 0
  left 0
  position absolute
  background var(--color-bg)
